<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_glide_card_view"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/my_glide_slider_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/glide_slider_background_color"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/my_glide_slider_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY"/>

        <ProgressBar
            android:id="@+id/glide_slider_loading_bar"
            style="@style/GlideSliderLoadingStyle"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>